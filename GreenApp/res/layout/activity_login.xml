<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aluminum1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/activity_login_XML_textview_app_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Number Rush"
        android:textStyle="bold"
        android:fontFamily=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/activity_login_XML_edittext_username"
        android:layout_width="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="username"
        style="@style/LoginInput.Email"
        android:layout_height="wrap_content"
        >
    </EditText>
    
    <EditText
        android:id="@+id/activity_login_XML_edittext_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/LoginInput.Password"
        android:hint="password"
        >
    </EditText>

    <Button
        android:id="@+id/activity_login_XML_button_login"
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        style="@style/error_button"
        android:text="Login" />

</LinearLayout>