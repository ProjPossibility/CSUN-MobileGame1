<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/activity_login_XML_textview_app_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="					Number Rush				"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/activity_login_XML_edittext_username"
        android:layout_width="fill_parent"
        android:layout_marginTop="50dp"
        android:hint="username"
        android:layout_height="wrap_content"
        >
    </EditText>
    
    <EditText
        android:id="@+id/activity_login_XML_edittext_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        >
    </EditText>

    <Button
        android:id="@+id/activity_login_XML_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login" />

</LinearLayout>