<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LobbyScreen" >

    <TextView
        android:id="@+id/lobbyWaitingPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/waiting_players"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/lobbyListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lobbyYourUserId"
        android:layout_below="@+id/lobbyWaitingPlayers" >
    </ListView>

    <TextView
        android:id="@+id/lobbyYourUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lobbyStartGame"
        android:layout_alignParentLeft="true"
        android:text="@string/your_user_id"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lobbyUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lobbyStartGame"
        android:layout_toRightOf="@+id/lobbyYourUserId"
        android:text="@string/user_id"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/lobbyStartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/start_game" />

</RelativeLayout>